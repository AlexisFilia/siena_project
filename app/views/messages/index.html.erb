<%= render 'shared/evolutive-top-bar' %>
<%= render 'shared/tchat-action-bar' %>

<div class="main-container with-bottom-margin with-top-margin">

  <div class="messages-container">

    <% if !@messages.blank? %>

      <%= will_paginate @messages %>

      <% if @messages.next_page %>
        <%= button_to 'More messages', { action: "index" }, params: {new_req: "true", perimeter: @initial_perimeter, page: @page}, method: :get, remote: true, format: 'js', class: "btn btn-primary btn-large", id: "load-more-messages"%>
      <% end %>

      <div id="my-messages">
        <% @messages.reverse.each do |message| %>
          <%= render 'shared/message', message: message %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>

