<%= render 'shared/navbar' %>

<div class="main-container centered-vertically" style="margin-top: 5vh;">
  <h2 class="big-title-special-font">Log in</h2>
  <div class="form-container max-1000" style="min-height: 0">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="centered-vertically">
          <%= f.button :submit, "Log in", class: "call-to-action" %>
        </div>
      <% end %>

      <%#= render "devise/shared/links" %>

  </div>
</div>

