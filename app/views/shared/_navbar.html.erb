<div id="navbar">

  <select onchange="location = this.value;">
    <option value="" disabled selected><%= t 'languages.select' %></option>
    <option value="/fr/<%= request.env['PATH_INFO'].gsub(/\/\w{2}\//, '').gsub(/\/\w{2}\z/, '') %>"><%= t 'languages.fr' %></option>
    <option value="/en/<%= request.env['PATH_INFO'].gsub(/\/\w{2}\//, '').gsub(/\/\w{2}\z/, '') %>"><%= t 'languages.en' %></option>
  </select>


  <div class="language-selection">
    <%= link_to 'EN', url_for( :locale => 'en' ), id: "en-selection" %>
    <%= link_to 'FR', url_for( :locale => 'fr' ), id: "fr-selection" %>
  </div>



  <%= link_to root_path  do %>
    <p class= "highlighted <%= @primary == 1 ? 'primary' : 'secondary' %>"><%= t 'nav_bar.home' %></p>
  <% end %>
  <%= link_to new_contact_path do %>
    <p class= "highlighted <%= @primary == 2 ? 'primary' : 'secondary' %>"><%= t 'nav_bar.contact' %></p>
  <% end %>
  <%= link_to new_user_session_path do %>
    <p class= "highlighted <%= @primary == 3 ? 'primary' : 'secondary' %>"><%= t 'nav_bar.login' %></p>
  <% end %>
</div>
