<%= render 'shared/navbar' %>

<div class="container bg-light">
  <div class="row p-4">
    <div class="col col-12">

      <h2>Nous contacter :</h2>

      <%= simple_form_for(@contact) do |f| %>
        <div class="form-inputs">
          <%= f.input :first_name,
                      required: false,
                      autofocus: true %>
          <%= f.input :last_name,
                      required: false,
                      autofocus: true %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :company,
                      required: false,
                      autofocus: true %>
          <%= f.input :message,
                      required: false,
                      autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer", class: "main-button" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
