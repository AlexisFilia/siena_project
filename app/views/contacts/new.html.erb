<%= render 'shared/navbar' %>

<div class="main-container centered-vertically" style="margin-top: 5vh;">
  <h2 class="big-title-special-font"><%= t '.contact-us' %></h2>
  <div class="form-container max-1000">



    <%= simple_form_for(@contact) do |f| %>
      <div class="form-inputs">
        <%= f.input :first_name,
                    required: false,
                    autofocus: true %>
        <%= f.input :last_name,
                    required: false,
                    autofocus: true %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :company,
                    required: false,
                    autofocus: true %>
        <%= f.input :message,
                    required: false,
                    autofocus: true %>
      </div>

      <div class="centered-vertically">
        <%= f.button :submit, t(".send"), class: "call-to-action" %>
      </div>

    <% end %>
  </div>
</div>
